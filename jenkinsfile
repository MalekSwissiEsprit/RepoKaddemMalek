pipeline {
    agent any
    tools {
        maven 'M2_HOME' // Doit correspondre au nom configuré dans "Global Tool Configuration"
    }
    stages {
        stage('Checkout') {
            steps {
                echo 'Cloning repository...'
                git branch: 'main', url: 'https://github.com/MalekSwissiEsprit/RepoKaddemMalek.git'
            }
        }
        stage('Build & Test') {
            steps {
                echo 'Running Maven build and tests...'
                sh 'mvn clean test'
            }
            post {
                always {
                    echo 'Publishing JUnit test results...'
                    junit '**/target/surefire-reports/*.xml'
                }
            }
        }
    }
    post {
        success {
            echo 'Build et tests réussis !'
        }
        failure {
            echo 'Échec du build ou des tests.'
        }
    }
}
