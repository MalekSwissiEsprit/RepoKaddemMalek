pipeline {
    agent any
    tools {
        maven 'M2_HOME' // Assurez-vous que Maven est configuré dans "Global Tool Configuration"
    }
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/MalekSwissiEsprit/RepoKaddemMalek.git'
            }
        }
        stage('Build & Test') {
            steps {
                sh 'mvn clean test'
            }
            post {
                always {
                    junit '**/target/surefire-reports/*.xml' // Publie les résultats des tests JUnit
                }
            }
        }
    }
    post {
        success {
            echo 'Build et tests réussis !'
        }
        failure {
            echo 'Échec du build ou des tests.'
        }
    }
}
