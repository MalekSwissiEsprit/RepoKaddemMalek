pipeline {
    agent any
    tools {
        jdk 'JAVA_HOME' // Assurez-vous que JAVA_HOME est configur√© dans Jenkins
        maven 'M2_HOME' // Assurez-vous que M2_HOME est configur√© dans Jenkins
    }
    stages {
        stage('Checkout Backend Code') {
            steps {
                dir('backend') {
                    git branch: 'main',
                        url: 'https://github.com/MalekSwissiEsprit/RepoKaddemMalek.git'
                }
            }
        }
        stage('Clean, Build and Test') {
            steps {
                dir('backend') {
                    echo 'üîß Cleaning and testing project with Maven'
                    sh 'mvn clean test'
                }
            }
        }
    }
    post {
        success {
            echo 'Pipeline termin√© avec succ√®s !'
        }
        failure {
            echo 'Le pipeline a √©chou√©. V√©rifiez les logs.'
        }
    }
}
