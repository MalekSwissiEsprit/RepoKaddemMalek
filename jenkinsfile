pipeline {
    agent any

    tools {
        maven 'M2_HOME'  // Nom de l'installation Maven configurée dans Jenkins
    
    }

    stages {
        stage('GIT') {
            steps {
                echo 'Cloning repository...'
                git branch: 'main', url: 'https://github.com/MalekSwissiEsprit/RepoKaddemMalek.git'
            }
        }

        stage('Compile Stage') {
            steps {
                echo 'Compiling the project...'
                sh 'mvn clean compile'
            }
        }

        stage('Test Stage') {
            steps {
                echo 'Running tests...'
                sh 'mvn test'
            }
            post {
                always {
                    echo 'Publishing JUnit test results...'
                    junit '**/target/surefire-reports/*.xml' // Publie les résultats des tests JUnit
                }
            }
        }

        stage('Maven Install') {
            steps {
                echo 'Installing the project to local Maven repository...'
                sh 'mvn install -DskipTests' // Pas besoin de relancer les tests
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
