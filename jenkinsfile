pipeline {
    agent any
    tools {
        maven 'M2_HOME' // Maven tool; ensure 'M2_HOME' matches the name in Jenkins
        jdk 'JAVA_HOME' // JDK tool; ensure 'JAVA_HOME' matches the name in Jenkins
    }
    stages {
        stage('Git Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/MalekSwissiEsprit/RepoKaddemMalek.git' // Replace with your repository URL and branch
            }
        }
        stage('Java Version') {
            steps {
                sh 'java -version' // Verify Java setup
            }
        }
        stage('MAVEN') {
            steps {
                sh 'mvn --version' // Verify Maven setup
            }
        }
        stage('Compile') {
            steps {
                sh 'mvn clean compile' // Compile the project
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test' // Run tests
            }
        }
        stage('Install') {
            steps {
                sh 'mvn install' // Install the project
            }
        }
    }
}
